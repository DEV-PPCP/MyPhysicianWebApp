        <fieldset id="fdPasswordDetails" class="Panel_bg_Sub" style="width:1000px;margin-left:20px;border: 1px solid silver;padding: 11px 10px 0px 10px;">

            <div class="col-xs-0 col-md-12 col-sm-2 col-lg-12" align="center">
